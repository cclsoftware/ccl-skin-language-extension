{
	"name": "ccl-skin-language",
	"displayName": "CCL Skin Language Support",
	"description": "IntelliSense for the CCL Skin Definition Language",
	"license": "Commercial",
	"version": "0.9.4",
	"publisher": "cclsoftware",
	"repository": "https://github.com/cclsoftware/ccl-skin-language-extension",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"CCL",
		"Skin"
	],
	"engines": {
		"vscode": "^1.88.0"
	},
	"activationEvents": [
		"onLanguage:xml"
	],
	"main": "./client/out/extension",
	"capabilities": {
		"virtualWorkspaces": false,
		"untrustedWorkspaces": {
			"supported": true
		}
	},
	"icon": "icon.png",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "CCL skin configuration",
			"properties": {
				"CCLSkin.classmodel.skinElements": {
					"scope": "resource",
					"type": "string",
					"default": "",
					"description": "Path to Skin Elements.classModel."
				},
				"CCLSkin.classmodel.visualStyles": {
					"scope": "resource",
					"type": "string",
					"default": "",
					"description": "Path to Visual Styles.classModel."
				},
				"CCLSkin.skinsLocations": {
					"scope": "resource",
					"type": "array",
					"default": [],
					"description": "Array of paths to parent folders of skin packs that are searched for skin pack imports."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run bundle-client & npm run bundle-server",
		"bundle-client": "SOURCE=./client/src/extension.ts TARGET=dist/extension.js npm run bundle",
		"bundle-server": "SOURCE=./server/src/server.ts TARGET=dist/server.js npm run bundle",
		"ci-build": "SOURCE=./server/test/fulldirectorytraverse.ts TARGET=build/checkskinerrors.js npm run bundle",
		"bundle": "esbuild $SOURCE --bundle --minify --outfile=$TARGET --external:vscode --format=cjs --platform=node --packages=bundle",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client ; npm install ; cd ../server ; npm install ; cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"dependencies": {
		"color-convert": "^3.1.3",
		"htmlparser2": "^10.1.0",
		"he": "^1.2.0"
	},
	"devDependencies": {
		"@types/color-convert": "^2.0.4",
		"@types/mocha": "^10.0.10",
		"@types/node": "18.18.0",
		"@types/vscode": "1.88.0",
		"@types/he": "^1.2.3",
		"esbuild": "^0.27.3",
		"mocha": "^11.7.5",
		"typescript": "^5.9.3"
	}
}
